generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Ticket {
  id            String    @id @default(cuid())
  number        Int
  status        String    @default("AVAILABLE")
  reservedUntil DateTime?
  buyerName     String?
  buyerTel      String?
  raffleId      String
  raffle        Raffle    @relation(fields: [raffleId], references: [id])

  @@unique([raffleId, number])
  @@index([raffleId, status])
}

model Winner {
  id         String   @id @default(cuid())
  raffleId   String
  name       String?
  number     Int?
  date       DateTime @default(now())
  imageUrl   String?
  phone      String?
  prize      String?
  proofImage String?
  published  Boolean  @default(true)
  raffle     Raffle   @relation(fields: [raffleId], references: [id])
}

model MarketingFlyer {
  id               String   @id
  imageUrl         String?
  isEnabled        Boolean  @default(false)
  delaySeconds     Int      @default(3)
  autoCloseSeconds Int      @default(8)
  updatedAt        DateTime @updatedAt
}

model Sponsor {
  id        String   @id @default(cuid())
  name      String
  logoUrl   String
  website   String?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PaymentWebhook {
  id        String   @id @default(cuid())
  provider  String
  eventId   String   @unique
  payload   String
  createdAt DateTime @default(now())
}

model Raffle {
  id               String    @id @default(cuid())
  title            String
  description      String?
  price            Int
  digits           Int
  total            Int
  startNumber      Int       @default(1)
  category         String
  status           String    @default("DRAFT")
  closeDate        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  drawAt           DateTime?
  drawMethod       String?
  drawPlatform     String?
  features         String?
  galleryImages    String?
  mainImage        String?
  shortDescription String?
  tickets          Ticket[]
  winners          Winner[]
}

model HomeHero {
  id               String   @id @default(cuid())
  title            String
  subtitle         String?
  highlight        String?
  ribbonText       String?
  ctaPrimaryText   String?
  ctaPrimaryUrl    String?
  ctaSecondaryText String?
  ctaSecondaryUrl  String?
  ctaThirdText     String?
  ctaThirdUrl      String?
  desktopImageUrl  String?
  mobileImageUrl   String?
  bullets          String?
  theme            String   @default("DARK") // DARK|LIGHT
  isActive         Boolean  @default(true)
  sortOrder        Int      @default(1)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
